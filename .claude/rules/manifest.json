{
  "rules": {
    "testing-standards": {
      "summary": "All code must have tests with >80% coverage",
      "file": "testing-standards.md",
      "triggers": ["test", "testing", "coverage", "spec"],
      "file_matchers": ["*.test.js", "*.test.ts", "*.spec.js", "*.spec.ts", "tests/**/*", "*_test.py", "test_*.py"],
      "priority": "high",
      "always_load_summary": false
    },
    "code-quality": {
      "summary": "Follow clean code principles and linting rules",
      "file": "code-quality.md",
      "triggers": ["code", "quality", "lint", "clean"],
      "file_matchers": ["*.tsx", "*.jsx", "*.ts", "*.js", "src/**/*.py", "components/**/*"],
      "priority": "medium",
      "always_load_summary": false
    },
    "documentation": {
      "summary": "Document all public APIs and complex logic",
      "file": "documentation.md",
      "triggers": ["docs", "document", "readme", "api"],
      "file_matchers": ["README.md", "*.md", "docs/**/*", "CHANGELOG.md", "API.md"],
      "priority": "medium",
      "always_load_summary": false
    },
    "security": {
      "summary": "Follow security best practices, no secrets in code",
      "file": "security.md",
      "triggers": ["security", "auth", "password", "secret", "token"],
      "file_matchers": ["*.env", ".env.*", "settings.py", "config.py", "config/*.json", "secrets/*", "**/auth/*"],
      "priority": "critical",
      "always_load_summary": true
    }
  },
  "metadata": {
    "version": "1.2.1",
    "last_updated": "2025-01-03",
    "plan_approval": {
      "enabled": true,
      "trigger_words": [
        "plan approved",
        "approve plan",
        "go ahead",
        "proceed with plan",
        "execute plan",
        "lgtm",
        "looks good to me",
        "start implementation",
        "implement the plan"
      ]
    },
    "agent_integrations": {
      "testing-specialist": {
        "related_rules": ["testing-standards"]
      },
      "security-auditor": {
        "related_rules": ["security"]
      },
      "code-quality-expert": {
        "related_rules": ["code-quality", "documentation"]
      }
    },
    "immutable_files": [
      ".claude/rules/manifest.json",
      ".env",
      ".env.*",
      "*.env",
      "**/.git/*",
      ".git/**/*",
      "*.key",
      "*.pem",
      "*.crt",
      "*.pfx",
      "**/.ssh/*",
      "**/secrets/*",
      "**/credentials/*",
      "*.secret",
      "private/*"
    ]
  }
}